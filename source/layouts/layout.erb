<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= ["Aaron Jenson", current_page.data.title].compact.join(" - ") %></title>
    <%= stylesheet_link_tag "site" %>
  </head>
  <body>
    <!-- Animated Background -->
    <div class="background"></div>
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
    <div class="orb orb-3"></div>

    <div class="dashboard">
      <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
          <div class="logo">A</div>
          <span class="logo-text">Aaron Jenson</span>
        </div>

        <ul class="nav-menu">
          <li class-"nav-section">
            <ul>
              <% sitemap.resources.select do |r|
                r.data[:nav_text].present?
              end.sort_by do |r|
                r.data[:nav_priority].present? ? r.data[:nav_priority] : 50
              end.each do |page| %>
                <li class="nav-item">
                  <% link_to(page.url, class: "nav-link#{current_resource.url == page.url ? " active" : ""}") do %>
                    <%= page.data.icon %>
                    <%= page.data.nav_text %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li>
        </ul>
      </aside>

